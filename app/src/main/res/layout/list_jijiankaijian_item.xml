<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="220px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="40px"
            android:paddingRight="40px" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/changjian" />

            <TextView
                android:id="@+id/tv_yikaijiang"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:background="#30000000"
                android:gravity="center"
                android:text="已开奖"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:text="TextView"
            android:textColor="#333333"
            android:textSize="32px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20px"
            android:text="期号："
            android:textColor="#AAAAAA"
            android:textSize="28px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="123456"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tv_kaijiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginBottom="20px"
            android:layout_marginTop="50px"
            android:text="即将开奖"
            android:textColor="#ED483A"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_kaijiang"
            android:layout_alignBottom="@+id/tv_kaijiang"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/tv_kaijiang"
            android:text="09:30:39"
            android:textColor="#ED483A"
            android:textSize="60px" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_kaijiang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:drawableLeft="@drawable/zhenf"
            android:gravity="center_vertical"
            android:text="已参与"
            android:textColor="#15A3E3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="#E6E6E6" />

</RelativeLayout>