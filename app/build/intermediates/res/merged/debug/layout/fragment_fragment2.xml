<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ex_projectitem2.Fragment2" >

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#ED483A" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="即将开奖"
            android:textColor="#FFFFFF"
            android:textSize="36px" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_jijiankaijiang_listView"
        android:layout_width="match_parent"
        android:layout_height="481px"
        android:layout_below="@+id/RelativeLayout"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:scrollbars="none" >
    </ListView>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_jijiankaijiang_listView"
        android:background="#F2F2F2" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#E6E6E6" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/up" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/imageView1"
            android:text="即将开奖"
            android:textColor="#888888"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/down" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/imageView2"
            android:text="已开奖"
            android:textColor="#888888"
            android:textSize="24px" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_yikaijiang_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_below="@+id/relativeLayout2" >

    </ListView>

</RelativeLayout>