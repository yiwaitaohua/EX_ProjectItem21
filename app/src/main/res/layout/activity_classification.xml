<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chengchikeji_activity.www.ClassificationActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout_fenlei"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#ED483A">

        <RelativeLayout
            android:id="@+id/back_Classification"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center">

        <ImageView
            android:layout_width="46px"
            android:layout_height="46px"
            android:id="@+id/imageView16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="36px"
            android:textColor="#FFFFFF"
            android:id="@+id/textView34"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listClassification"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RelativeLayout_fenlei" />
</RelativeLayout>
