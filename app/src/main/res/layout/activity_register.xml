<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chengchikeji_activity.www.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ED483A"
        android:id="@+id/relativeLayout15">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="46px"
                android:layout_height="46px"
                android:id="@+id/imageView26"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/textView55"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="36px"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/relativeLayout15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="@drawable/login_registration_input_box"
        android:id="@+id/relativeLayout16">

        <ImageView
            android:layout_width="36px"
            android:layout_height="42px"
            android:id="@+id/imageView27"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:src="@drawable/phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/registEditPhone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView27"
            android:layout_toEndOf="@+id/imageView27"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:hint="输入手机号码注册"
            android:textColor="#B6B6B6"
            android:textSize="32px"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/relativeLayout16"
        android:layout_alignLeft="@+id/relativeLayout16"
        android:layout_alignStart="@+id/relativeLayout16"
        android:layout_marginTop="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/login_registration_input_box"
        android:id="@+id/relativeLayout17">

        <ImageView
            android:layout_width="36px"
            android:layout_height="42px"
            android:id="@+id/imageView28"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:src="@drawable/verification_code" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/registEditVerification"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView28"
            android:layout_toEndOf="@+id/imageView28"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:hint="填写验证码"
            android:textColor="#B6B6B6"
            android:textSize="32px"
            android:background="@null"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:id="@+id/btnObtainVerification"
            android:textSize="28px"
            android:textColor="#ED483A"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50px"
            android:layout_marginEnd="50px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:paddingRight="10px"
            android:paddingLeft="10px"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/relativeLayout17"
        android:layout_alignLeft="@+id/relativeLayout17"
        android:layout_alignStart="@+id/relativeLayout17"
        android:layout_marginTop="20px"
        android:layout_marginRight="30px"
        android:background="@drawable/login_registration_input_box"
        android:id="@+id/relativeLayout18">

        <ImageView
            android:layout_width="36px"
            android:layout_height="42px"
            android:id="@+id/imageView29"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:src="@drawable/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:id="@+id/registEditLoginPwd"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView29"
            android:layout_toEndOf="@+id/imageView29"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:hint="设置登录密码"
            android:textColor="#B6B6B6"
            android:textSize="32px"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/relativeLayout18"
        android:layout_alignLeft="@+id/relativeLayout18"
        android:layout_alignStart="@+id/relativeLayout18"
        android:layout_marginTop="20px"
        android:layout_marginRight="30px"
        android:background="@drawable/login_registration_input_box"
        android:id="@+id/relativeLayout19">

        <ImageView
            android:layout_width="36px"
            android:layout_height="42px"
            android:id="@+id/imageView30"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:src="@drawable/password_one" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:id="@+id/registEditConfirmLogin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView30"
            android:layout_toEndOf="@+id/imageView30"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:hint="确认登录密码"
            android:textColor="#B6B6B6"
            android:textSize="32px"
            android:background="@null"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="注册"
        android:id="@+id/txtRegisterClick"
        android:layout_below="@+id/relativeLayout19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:gravity="center"
        android:textSize="36px"
        android:textColor="#FFFFFF"
        android:background="@drawable/registration_confirmation_button"/>

    <ImageView
        android:layout_width="36px"
        android:layout_height="36px"
        android:id="@+id/imgeIndianaClause"
        android:layout_below="@+id/txtRegisterClick"
        android:layout_alignLeft="@+id/txtRegisterClick"
        android:layout_alignStart="@+id/txtRegisterClick"
        android:layout_marginTop="60px"
        android:src="@drawable/agree" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我同意"
        android:id="@+id/textView57"
        android:layout_alignBottom="@+id/imgeIndianaClause"
        android:layout_toRightOf="@+id/imgeIndianaClause"
        android:layout_toEndOf="@+id/imgeIndianaClause"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:textSize="28px"
        android:textColor="#333333"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“91夺宝服务条款”"
        android:id="@+id/txtServiceClause"
        android:layout_alignTop="@+id/textView57"
        android:layout_toRightOf="@+id/textView57"
        android:layout_toEndOf="@+id/textView57"
        android:textSize="28px"
        android:textColor="#15A3E3"/>


</RelativeLayout>
