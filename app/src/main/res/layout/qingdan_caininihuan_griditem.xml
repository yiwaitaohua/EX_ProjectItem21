<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="430px"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/homePagerPhoneImage"
            android:layout_width="match_parent"
            android:layout_height="276px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/homePagerImageTenYuan"
            android:layout_width="66px"
            android:layout_height="70px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ten_yuan_area" />

        <TextView
            android:id="@+id/homePagerPhoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/homePagerImageTenYuan"
            android:layout_alignStart="@+id/homePagerImageTenYuan"
            android:layout_below="@+id/homePagerPhoneImage"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:text="New Text"
            android:textColor="#333333"
            android:textSize="28px" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/homePagerImageTenYuan"
            android:layout_alignStart="@+id/homePagerImageTenYuan"
            android:layout_below="@+id/homePagerPhoneName"
            android:layout_marginLeft="24px"
            android:layout_marginTop="30px"
            android:text="开奖进度"
            android:textColor="#AAAAAA"
            android:textSize="24px" />

        <TextView
            android:id="@+id/homePagerPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/homePagerPBar"
            android:layout_toEndOf="@+id/textView26"
            android:layout_toRightOf="@+id/textView26"
            android:text="0%"
            android:textColor="#15A3E3"
            android:textSize="24px" />

        <TextView
            android:id="@+id/homePagerJoinIn"
            android:layout_width="120px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/homePagerPercentage"
            android:layout_marginEnd="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/qingd_join_list"
            android:gravity="center"
            android:text="加入清单"
            android:textColor="#ED483A"
            android:textSize="24px" />

        <ProgressBar
            android:id="@+id/homePagerPBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="10px"
            android:layout_marginBottom="30px"
            android:layout_alignLeft="@+id/textView26"
            android:layout_alignStart="@+id/textView26"
            android:layout_below="@+id/textView26"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:layout_toLeftOf="@+id/homePagerJoinIn"
            android:layout_toStartOf="@+id/homePagerJoinIn"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/textView29"
            android:background="#E6E6E6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#E6E6E6" />
</LinearLayout>
